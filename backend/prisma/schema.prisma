generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CLIENT
  HOST
  ADMIN
}

enum PCLevel {
  A
  B
  C
}

enum PCStatus {
  ONLINE
  OFFLINE
  BUSY
}

enum PCCategory {
  GAMES
  DESIGN
  VIDEO
  DEV
  OFFICE
}

enum SessionStatus {
  PENDING
  ACTIVE
  ENDED
  FAILED
}

enum QueueEntryStatus {
  WAITING
  ACTIVE
  CANCELLED
  EXPIRED
}

enum ReservationStatus {
  SCHEDULED
  ACTIVE
  CANCELLED
  COMPLETED
  EXPIRED
}

enum WalletTxType {
  CREDIT
  DEBIT
}

model User {
  id        String        @id @default(uuid())
  name      String
  email     String        @unique
  role      UserRole
  createdAt DateTime      @default(now())
  host      HostProfile?
  sessions  Session[]     @relation("ClientSessions")
  queueEntries QueueEntry[]
  reservations Reservation[]
  favorites Favorite[]
  wallet    Wallet?
  walletTxs WalletTx[]
}

model HostProfile {
  id               String   @id @default(uuid())
  userId           String   @unique
  displayName      String
  reliabilityScore Float    @default(100)
  lastSeenAt       DateTime @default(now())
  createdAt        DateTime @default(now())
  user             User     @relation(fields: [userId], references: [id])
  pcs              PC[]
  reliabilityEvents ReliabilityEvent[]
  favorites        Favorite[]
}

model PC {
  id                  String        @id @default(uuid())
  hostId              String
  name                String
  level               PCLevel
  categories          PCCategory[]  @default([])
  softwareTags        String[]      @default([])
  specSummary         Json          @default("{}")
  description         String        @default("")
  cpu                 String
  ramGb               Int
  gpu                 String
  vramGb              Int
  storageType         String
  internetUploadMbps  Int
  connectionHost      String?
  connectionPort      Int?          @default(47990)
  connectionNotes     String?
  pricePerHour        Float
  status              PCStatus      @default(ONLINE)
  createdAt           DateTime      @default(now())
  host                HostProfile   @relation(fields: [hostId], references: [id])
  softwareLinks       PCSoftware[]
  sessions            Session[]
  queueEntries        QueueEntry[]
  reservations        Reservation[]
  favorites          Favorite[]
}

model Software {
  id        String       @id @default(uuid())
  name      String
  category  String
  pcs       PCSoftware[]
}

model PCSoftware {
  pcId       String
  softwareId String
  pc         PC       @relation(fields: [pcId], references: [id])
  software   Software @relation(fields: [softwareId], references: [id])

  @@id([pcId, softwareId])
}

model Favorite {
  id        String      @id @default(uuid())
  userId    String
  pcId      String?
  hostId    String?
  createdAt DateTime    @default(now())
  user      User        @relation(fields: [userId], references: [id])
  pc        PC?         @relation(fields: [pcId], references: [id])
  host      HostProfile? @relation(fields: [hostId], references: [id])

  @@unique([userId, pcId])
  @@unique([userId, hostId])
  @@index([userId, createdAt])
}

model Session {
  id              String        @id @default(uuid())
  pcId            String
  clientUserId    String
  status          SessionStatus
  startAt         DateTime?
  endAt           DateTime?
  minutesPurchased Int
  minutesUsed     Int           @default(0)
  priceTotal      Float
  platformFee     Float         @default(0)
  hostPayout      Float         @default(0)
  clientCredit    Float         @default(0)
  failureReason   String?
  createdAt       DateTime      @default(now())
  pc              PC            @relation(fields: [pcId], references: [id])
  client          User          @relation("ClientSessions", fields: [clientUserId], references: [id])
  walletTxs       WalletTx[]
}

model QueueEntry {
  id               String           @id @default(uuid())
  pcId             String
  userId           String
  minutesPurchased Int
  status           QueueEntryStatus @default(WAITING)
  createdAt        DateTime         @default(now())
  pc               PC               @relation(fields: [pcId], references: [id])
  user             User             @relation(fields: [userId], references: [id])

  @@index([pcId, status, createdAt])
  @@index([userId, status])
}

model Reservation {
  id        String            @id @default(uuid())
  pcId      String
  userId    String
  startAt   DateTime
  endAt     DateTime
  status    ReservationStatus @default(SCHEDULED)
  createdAt DateTime          @default(now())
  pc        PC                @relation(fields: [pcId], references: [id])
  user      User              @relation(fields: [userId], references: [id])

  @@index([pcId, status, startAt, endAt])
  @@index([userId, status])
}

model Wallet {
  userId  String  @id
  balance Float   @default(0)
  user    User    @relation(fields: [userId], references: [id])
}

model WalletTx {
  id        String       @id @default(uuid())
  userId    String
  type      WalletTxType
  amount    Float
  reason    String
  sessionId String?
  createdAt DateTime     @default(now())
  user      User         @relation(fields: [userId], references: [id])
  session   Session?     @relation(fields: [sessionId], references: [id])
}

model ReliabilityEvent {
  id        String   @id @default(uuid())
  hostId    String
  type      String
  createdAt DateTime @default(now())
  host      HostProfile @relation(fields: [hostId], references: [id])
}
